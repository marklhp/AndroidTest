                style="@style/MyTextviewStyle"
                android:hint="域名"
                android:tag="binding_3"         
                />
            <TextView
                android:id="@+id/linphone_et4"
                style="@style/MyTextviewStyle"
                android:hint="登录"
                android:tag="binding_4"   
                />
            <TextView
                android:id="@+id/linphone_et5"
                style="@style/MyTextviewStyle"
                android:hint="状态"
                android:tag="binding_5" 
                />
