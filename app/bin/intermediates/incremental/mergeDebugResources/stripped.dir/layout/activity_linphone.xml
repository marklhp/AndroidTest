    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/activity_linphone_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".activity.sip.activity.LinphoneActivity">
            <EditText
                android:id="@+id/linphone_et1"
                style="@style/MyTextviewStyle"
                android:hint="用户名"
                android:tag="binding_1"    
                />
            <EditText
                android:id="@+id/linphone_et2"
