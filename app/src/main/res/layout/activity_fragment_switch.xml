<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="click"
            type="android.view.View.OnClickListener" />
    </data>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <FrameLayout
           android:id="@+id/fragment_switch_fl"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           tools:context=".activity.FragmentSwitchActivity"
           android:background="@android:color/holo_green_light"
           >

       </FrameLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <TextView
               android:id="@+id/fragment_switch_tv1"
               android:layout_width="0dp"
               android:layout_weight="1"
               style="@style/MyTextviewStyle"
               android:text="1"
               android:gravity="center"
               android:onClick="@{click}"
               />
           <TextView
               android:id="@+id/fragment_switch_tv2"
               android:layout_width="0dp"
               android:layout_weight="1"
               style="@style/MyTextviewStyle"
               android:text="2"
               android:gravity="center"
               android:onClick="@{click}"
               />
           <TextView
               android:id="@+id/fragment_switch_tv3"
               android:layout_width="0dp"
               android:layout_weight="1"
               style="@style/MyTextviewStyle"
               android:text="3"
               android:gravity="center"
               android:onClick="@{click}"
               />
           <TextView
               android:id="@+id/fragment_switch_tv4"
               android:layout_width="0dp"
               android:layout_weight="1"
               style="@style/MyTextviewStyle"
               android:text="4"
               android:gravity="center"
               android:onClick="@{click}"
               />
       </LinearLayout>
   </LinearLayout>
</layout>