<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.myapp.activity.ConstrationActivity">

        <View
            android:id="@+id/constration_view1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@android:color/black"></View>

        <TextView
            android:id="@+id/constration_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_dark"
            android:padding="10dp"
            android:text="1"
            app:layout_alignSelf="flex_start"
            app:layout_constraintTop_toBottomOf="@id/constration_view1"

            />

        <TextView
            android:id="@+id/constration_view3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:gravity="right"
            android:padding="10dp"
            android:text="2"
            app:layout_alignSelf="flex_end"
            app:layout_constraintLeft_toRightOf="@id/constration_view2"
            app:layout_constraintRight_toLeftOf="@id/constration_view4"
            app:layout_constraintTop_toBottomOf="@id/constration_view1"
            app:layout_flexGrow="1" />

        <TextView
            android:id="@+id/constration_view4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_dark"
            android:padding="10dp"
            android:text="3"
            app:layout_alignSelf="flex_start"
            app:layout_constraintRight_toLeftOf="@id/constration_view5"
            app:layout_constraintTop_toBottomOf="@id/constration_view1" />

        <TextView
            android:id="@+id/constration_view5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_dark"
            android:padding="10dp"
            android:text="4"
            app:layout_alignSelf="flex_end"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constration_view1" />

        <TextView
            android:id="@+id/constration_view6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_dark"
            android:padding="10dp"
            android:text="1"
            app:layout_alignSelf="center"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/constration_view7"
            app:layout_constraintTop_toBottomOf="@id/constration_view2" />

        <TextView
            android:id="@+id/constration_view7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_dark"
            android:padding="10dp"
            android:text="2"
            app:layout_constraintLeft_toRightOf="@id/constration_view6"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constration_view2" />

        <TextView
            android:id="@+id/constration_view8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="tab"
            app:layout_constraintTop_toBottomOf="@id/constration_view6"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
